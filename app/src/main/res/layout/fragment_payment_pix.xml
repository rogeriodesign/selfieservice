<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.checkout.PaymentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_default_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_text_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Copie o código abaixo"
            android:singleLine="false"
            app:layout_constraintStart_toEndOf="@id/tv_number_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_qrcode" />

        <TextView
            android:id="@+id/tv_number_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_background_border"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_text_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_text_1"/>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/square_background_border"
            android:drawableEnd="@drawable/ic_next_login_create"
            android:text="64984654984156481654848"
            android:singleLine="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text_1" />

        <View
            android:id="@+id/v_btn_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="@id/tv_code"
            app:layout_constraintEnd_toEndOf="@id/tv_code"
            app:layout_constraintTop_toTopOf="@id/tv_code"
            app:layout_constraintBottom_toBottomOf="@id/tv_code"/>

        <TextView
            android:id="@+id/tv_text_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Entre no aplicativo do seu banco, acesse a área do Pix e utilize o Pix Copia e Cola"
            android:singleLine="false"
            app:layout_constraintStart_toEndOf="@id/tv_number_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_code" />

        <TextView
            android:id="@+id/tv_number_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_background_border"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_text_2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_text_2"/>

        <TextView
            android:id="@+id/tv_text_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Confira o valor e finalize o pagamento. Seu pedido será aprovado em alguns minutos :)"
            android:singleLine="false"
            app:layout_constraintStart_toEndOf="@id/tv_number_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text_2" />

        <TextView
            android:id="@+id/tv_number_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_background_border"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_text_3"
            app:layout_constraintBottom_toBottomOf="@+id/tv_text_3"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>